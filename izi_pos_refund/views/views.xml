<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="pos_order_refund_inherit_view" model="ir.ui.view">
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm_order']" position="after">
                    <button name="refund" type="object" string="Refund" class="oe_highlight" attrs="{'invisible':['|',('state','not in',('invoiced', 'done'))]}"/>
                    <button name="send_refund" type="object" string="Send Refund" class="oe_highlight" attrs="{'invisible':['|',('state','not in',('draft')), ('x_pos_partner_refund_id','=', False)]}"/>
                    <button name="confirm_refund" type="object" string="Confirm Refund" class="oe_highlight" attrs="{'invisible':['|',('state','not in',('wait_confirm')), ('x_pos_partner_refund_id','=', False)]}"/>
                    <button name="back_refund" type="object" string="Back Refund" attrs="{'invisible':['|',('state','not in',('wait_confirm')), ('x_pos_partner_refund_id','=', False)]}"/>
                    <button name="done_refund" type="object" string="Done" class="oe_highlight" attrs="{'invisible':[('state','not in',('confirm'))]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>