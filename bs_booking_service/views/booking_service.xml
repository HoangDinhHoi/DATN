<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_view_booking_service" model="ir.ui.view">
            <field name="name">Thông tin đơn đặt dịch vụ</field>
            <field name="model">service.booking</field>
            <field name="arch" type="xml">
                <form string="Thông tin đơn đặt dịch vụ">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <h1 class="text-center">
                                    <field name="name" class="oe_inline" readonly="1"
                                        attrs="{'invisible': [('name', '=', False)]}"/>
                                </h1>
                            </div>
                        </group>
                        <label for="partner_id"/>
                        <h2>
                            <field name="partner_id" options="{'no_open': 1, 'no_create': 1, 'no_create_edit': 1}"/>
                        </h2>
                        <group>
                            <group>
                                <field name="user_id" required="1"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="customer_qty"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="time_from" required="1"/>
                                <field name="time_to" required="1"/>
                            </group>
                            <group>
                                <field name="note"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Dịch vụ" attrs="{'readonly':[('state','not in',('new'))]}">
                                <field name="service_ids">
                                    <tree editable="bottom">
                                        <field name="default_code"/>
                                        <field name="name"/>
                                        <field name="x_duration" widget="float_time" sum="Tổng thời lượng"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sản phẩm">
                                <field name="product_ids" attrs="{'readonly':[('state','not in',('new'))]}">
                                    <tree editable="bottom">
                                        <field name="product_id" required="1"/>
                                        <field name="qty" required="1"/>
                                        <field name="amount_total" required="1" readonly="1" force_save="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Giường" attrs="{'readonly':[('state','not in',('new'))]}">
                                <field name="bed_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Nhân viên"
                                  attrs="{'readonly':[('state','not in',('new'))]}">
                                <field name="employee_ids">
                                    <tree>
                                        <field name="x_employee_code"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
               </form>
           </field>
        </record>

        <record id="tree_view_booking_service" model="ir.ui.view">
            <field name="name">Danh sách đơn đặt dịch vụ</field>
            <field name="model">service.booking</field>
            <field name="arch" type="xml">
                <tree string="Danh sách đơn đặt dịch vụ">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_view_booking_service" model="ir.actions.act_window">
            <field name="name">Đơn đặt làm dịch vụ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service.booking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                    Chưa có danh sách Đơn đặt làm dịch vụ
              </p><p>
                    Tạo mới đơn đặt làm dịch vụ
              </p>
            </field>
        </record>
    </data>
</odoo>
