<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="form_view_service_bed" model="ir.ui.view">
           <field name="name">Thông tin giường</field>
           <field name="model">service.bed</field>
           <field name="arch" type="xml">
               <form string="Thông tin giường">
                   <header>
                       <field name="state" widget="statusbar" statusbar_visible="busy,free"/>
                   </header>
                   <sheet>
                       <group>
                           <group>
                               <field name="name" required="1"/>
                           </group>
                           <group>
                               <field name="code" readonly="1"/>
                           </group>
                           <label for="description"/>
                           <field name="description"/>
                       </group>
                   </sheet>
               </form>
           </field>
       </record>

      <record id="tree_view_service_bed" model="ir.ui.view">
          <field name="name">Danh sách giường</field>
          <field name="model">service.bed</field>
          <field name="arch" type="xml">
              <tree string="Danh sách giường">
                  <field name="name"/>
                  <field name="code"/>
                  <field name="description"/>
              </tree>
          </field>
      </record>

      <record id="action_view_service_bed" model="ir.actions.act_window">
          <field name="name">Giường</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">service.bed</field>
          <field name="view_type">form</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Tạo mới giường và thông tin của giường
            </p><p>
                Các cấu hình cơ bản: Tên, Mã(tự sinh), Mô tả, Trạng thái
            </p>
          </field>
      </record>
    </data>
</odoo>
